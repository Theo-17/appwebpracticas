<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="contabilidad" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>com.modelo.entities.Gasto</class>
		<class>com.modelo.entities.Ingreso</class>
		<class>com.modelo.entities.IngresoGasto</class>
		<class>com.modelo.entities.MovGasto</class>
		<class>com.modelo.entities.Movimiento</class>
		<class>com.modelo.entities.MovIngreso</class>
		<class>com.modelo.entities.MovRecurrente</class>
		<class>com.modelo.entities.Transferencia</class>
		<class>com.modelo.entities.Usuario</class>
		<class>com.modelo.entities.Cuenta</class>

		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:8889/herenciacontabilidad" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="root" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
			<!-- property name="eclipselink.ddl-generation" value="create-tables" /-->
			<!-- property name="eclipselink.ddl-generation" value="drop-and-create-tables"/-->
			<property name="eclipselink.ddl-generation" value="none" />
		</properties>


	</persistence-unit>
</persistence>
